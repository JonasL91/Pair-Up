<UserControl x:Class="PairUp.Views.RecentTournaments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
            <Button Style="{DynamicResource BaseButton}" Content="Nieuw toernooi starten" Command="{Binding StartNewTournamentCommand}"/>
            <Button Style="{DynamicResource BaseButton}" Content="Open toernooi" Command="{Binding LoadTournamentCommand}"/>
        </StackPanel>

        <GroupBox Style="{DynamicResource BaseGroupBox}"  Header="Recent Files" >
            <ListView Style="{DynamicResource BaseListView}" ItemsSource="{Binding RecentFiles}" SelectedItem="{Binding SelectedFile}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </GroupBox>
       
    </DockPanel>
   
    
</UserControl>
